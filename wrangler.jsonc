{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "planning-poker",
	"compatibility_date": "2025-06-28",
	"compatibility_flags": ["nodejs_compat"],
	"main": "./worker.ts",
	"assets": {
		"binding": "ASSETS",
		"directory": "./.output/public/"
	},
	"durable_objects": {
		"bindings": [
			{
				"name": "POKER_ROOM",
				"class_name": "PokerRoom"
			}
		]
	},
	"migrations": [
		{
			"tag": "v1",
			"new_classes": ["PokerRoom"]
		}
	],
	// KV namespace for feature flags (GrowthBook webhook payload)
	// - id/preview_id: Points to dev/test namespace (safe to commit)
	// - PRODUCTION: Override binding in Cloudflare Dashboard > Workers > planning-poker > Settings > Bindings
	//   This keeps the production namespace ID out of version control
	"kv_namespaces": [
		{
			"binding": "FLAGS_CACHE",
			"id": "f97e08d3c29540038fa28380e9080787",
			"preview_id": "f97e08d3c29540038fa28380e9080787"
		}
	],
	"observability": {
		"enabled": true,
		"logs": {
			"enabled": true,
			"head_sampling_rate": 1,
			"invocation_logs": true
		},
		"traces": {
			"enabled": true,
			"head_sampling_rate": 1
		}
	}
}
